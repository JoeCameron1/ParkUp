<!DOCTYPE html>
<html>

    <head>
        <link type="text/css" rel="stylesheet" href="./assets/css/style.css" />
        <!-- Bootstrap Core CSS -->
        <link href="./assets/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom CSS -->
        <link href="./assets/css/stylish-portfolio.css" rel="stylesheet">
        <!-- Custom Fonts -->
        <link href="./assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    </head>

    <body>

      <%- include side-menu.ejs %>

      <!-- Header -->
      <header id="top" class="header">
          <div class="text-vertical-center">
              <h1>ParkUp</h1>
              <h3>Stress-free Parking</h3>
              <br>
              <a href="#about" class="btn btn-dark btn-lg">Start Searching</a>
          </div>
      </header>

      <!-- About -->
      <section id="about" class="about">
          <div class="container">
              <div class="row">
                  <div class="col-lg-12 text-center">
                      <h2>Search for a neighbourhood!</h2>
                  </div>
              </div>
              <!-- /.row -->
          </div>
          <!-- /.container -->
      </section>

      <!-- Map -->
      <section id="search" class="search">
          <div class="container">
              <div class="col-lg-1">
                  <button class="btn" id="expandRadius">+</button> <br>
                  <button class="btn" id="shrinkRadius">&minus;</button> <br>
              </div>
              <div class="col-lg-7">
                  <div class="row">
                      <div class="input-group input-group-lg">
                          <input type="text" class="form-control" id="addNeighbourhood" placeholder="Enter a neighbourhood">
                          <span class="input-group-btn">
                              <button type="submit" onclick="neighbourhoodSearch()" id="search_button" class="btn btn-success">Search</button>
                          </span>
                      </div>
                  </div>
                  <div class="row">
                      <div id="map" class="map">
                      </div>
                  </div>
              </div>
              <div class="container full-height">
                  <div class="row full-height">
                      <div class="col-md-5 full-height">
                          <div class="well" id="well1">
                              <h3 id="title" class="text-center">Results</h3>
                          </div>
                          <div class="well" id="well2">
                              <div id="accordion" role="tablist" aria-multiselectable="true">
                                  <% if (listings == null || listings == []){ %>
                                    <p>No Listings.</p>
                                  <%} else {%>
                                    <% for (var i=0; i<listings.length; i++){ %>
                                      <div class="card">
                                          <div class="card-header" role="tab" id="heading1">
                                              <h5 class="mb-0">
                                                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= i + 1 %>" aria-expanded="false" aria-controls="collapse<%= i + 1%>">
                                                      <div class="heading">
                                                          <h4 class="pr">Price: <%= listings[i].price %>, Rating: <%=listings[i].rating %></h4>
                                                      </div>
                                                      <div class="heading pull-right">
                                                          <h4 class="distance">Distance: <%= listings[i].distance %></h4>
                                                      </div>
                                                  </a>
                                              </h5>
                                          </div>

                                          <div id="collapse<%= i + 1%>" class="collapse" role="tabpanel" aria-labelledby="heading<%= i + 1%>">
                                              <div class="card-block">
                                                  <a class="description" href="#reviews">
                                                      <p><%= listings[i].description %></p>
                                                  </a>
                                              </div>
                                          </div>
                                      </div>
                                    <% } %>  
                                  <% } %>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </section>

      <!-- Reviews -->
      <section id="reviews" class="reviews">
          <div class="container">
              <div class="col-lg-12">
                  <h3>Review Title</h3>
                  <p class="price">Placeholder Price</p>
                  <p class="rating">Placeholder Rating</p>
                  <p class="distance">Placeholder Distance</p>
                  <button onclick="bookNow()" class="btn btn-success col-lg-12">Book Now</button>
                  <h4 class="review">Review</h4>
              </div>
          </div>
      </section>

      <!-- Lightbox -->
      <%- include booking-lightbox.ejs %>

      <!-- Footer -->
      <%- include footer.ejs %>

      <!-- jQuery -->
      <script src="js/jquery.js"></script>

      <!-- Bootstrap Core JavaScript -->
      <script src="js/bootstrap.min.js"></script>

        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCchVATRhiKo3HjaJxlZL8FVTlDXi7uX5U&callback=initMap&libraries=geometry&libraries=places">
        </script>

        <script src="./assets/scripts/script.js"></script>
      <script src="./assets/scripts/index.js"></script>
      <script src="./assets/scripts/results.js"></script>
      <script src="./assets/scripts/booking.js"></script>
      <script src="./assets/scripts/MapSearch.js"></script>
      <script type="text/javascript" src="ejs_production.js"></script>
    </body>

</html>
